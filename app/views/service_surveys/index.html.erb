<% if @services.any? %>
    <div class="table-responsive service-surveys">
      <table class="table sortable_table table-striped">
        <thead>
        <tr>
          <th><%= t(".services") %></th>
          <th><%= t(".surveys") %></th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <% @services.each do |service| %>
            <tr>
              <td><%= service.name %></td>
              <td>
                <%= select_tag("service_survey_selector",
                               options_for_select(
                               service.service_surveys.order(phase: 'desc').map{|a| [t("service_survey_phase_options.#{a.phase}")+" - #{a.title} ", a.id ]}),
                               {include_blank: true, class:"js-select-survey", "data-serviceid" => "#{service.id}"}) %>
              </td>
              <td>
		            <table class="inside no-border-rows">
		              <tbody>

						            <% service.service_surveys.each do |survey|%>

						              <% if current_user %>
						                  <% unless survey.has_been_answered_by?(current_user) %>
		                          <tr class="<%= "js-survey-#{survey.id} js-service-#{service.id} hidden" %>">
						                      <td>
						                        <%= link_to t(".start_survey"), new_answer_path(service_survey_id: survey.id), class: "btn btn-info" %>
						                      </td >
		                          </tr>
						                  <% else %>
		                          <tr class="<%= "js-survey-#{survey.id} js-service-#{service.id} hidden" %>">
						                      <td>
						                        <span class="label label-success"><%= t(".answered") %></span>
						                      </td >
						                      <td>
						                        <%= link_to t('service_report.show_report'), service_survey_reports_path(service_survey_id: survey.id), class: "btn btn-success" %>
						                      </td >
		                          </tr>
						                  <% end %>
						              <% end %>
						            <% end %>
		                </tr>
				          </tbody>
		            </table>
            <td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
<% else %>
    <p><em><%= t(".no_service_surveys") %></em></p>
<% end %>