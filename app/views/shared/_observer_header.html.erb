<div class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button class="navbar-toggle" data-target=".navbar-collapse" data-toggle="collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to t('public_nav_bar.name'), root_path, class: 'navbar-brand' %>
    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              <%= current_user.name || current_user.email %>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to  edit_user_registration_path do %>
                  <i class="icon-cog"></i>
                  <%= t('public_nav_bar.edit_profile') %>
                <% end %>
              </li>
              <li class="divider"></li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="icon-off"></i>
                  <%= t('public_nav_bar.sign_out') %>
                <% end %>
              </li>
            </ul>
          </li>
        <% else %>
          <li>
            <%= link_to t('public_nav_bar.sign_up'), new_user_registration_path %>
          </li>
          <li>
            <%= link_to t('public_nav_bar.sign_in'), new_user_session_path %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
