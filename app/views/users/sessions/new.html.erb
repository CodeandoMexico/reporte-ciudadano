<div class="sign-up">
  <h1 class="form-header">Iniciar sesi√≥n</h1>
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { autocomplete: :off }) do |f| %>

    <div class="fields"><%= f.label :email %>
    <%= f.email_field :email, :autofocus => true %></div>

  <div class="fields"><%= f.label :password %>
    <%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
<% end -%>

  <div class="actions"><%= f.submit "Entrar" %></div>
<% end %>
  <hr />

  <%= render "users/shared/links" %>
</div>

