<div class="page-content inset">
  <h2>
    <%= t('.public_servants') %>
    <div class="btn-group pull-right">
      <%= link_to t('.new_public_servant'), new_admins_public_servant_path, class: 'btn btn-primary' %>
    </div>
  </h2>
</div>

<%= render 'search_form' %>

<ul class="js-tabs nav nav-tabs padding-top">
  <li class="active">
    <%= link_to t(".enabled"), "#enabled", "data-toggle" => "tab" %>
  </li>
  <li>
    <%= link_to t(".disabled"), "#disabled", "data-toggle" => "tab" %>
  </li>
</ul>

<div class="tab-content">
  <div class="tab-pane active" id="enabled">
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th><%= t(".name") %></th>
            <th><%= t(".email") %></th>
            <th><%= t(".record_number") %></th>
            <th><%= t(".dependency") %></th>
            <th><%= t(".administrative_unit") %></th>
            <th><%= t(".charge") %></th>
            <th><%= t(".services") %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: 'public_servant', collection: @public_servants, as: 'public_servant' %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="tab-pane" id="disabled">
    <table class="table table-striped">
      <thead>
        <tr>
          <th><%= t(".name") %></th>
          <th><%= t(".email") %></th>
          <th><%= t(".record_number") %></th>
          <th><%= t(".dependency") %></th>
          <th><%= t(".administrative_unit") %></th>
          <th><%= t(".charge") %></th>
          <th><%= t(".services") %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: 'public_servant', collection: @disabled_public_servants, as: 'public_servant' %>
      </tbody>
    </table>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(loadChosen);
  $(document).on('page:load', loadChosen);
</script>
