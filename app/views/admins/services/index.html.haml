.content-header
  %h2= t('.header')

.page-content.inset

  .page-description
    %blockquote
      %i= t('.page-description')

  .btn-group.admin-actions
    = link_to t('.new_service'), new_admins_service_path, class: 'btn btn-primary'
    = link_to t('.new_status'), new_admins_status_path, class: 'btn btn-primary'


  %h2= t('.services')

  = search_form_for @search, url: admins_services_path, method: :get, class: "filters form-inline" do |f|
    .form-group.col-md-6
      = f.select :name, service_name_options, { prompt: t('admin.service.show.columns.name') }, class: 'form-control'
    .form-group.col-md-6
      = f.select :dependency, service_dependency_options, { prompt: t('form.labels.dependency') }, class: 'form-control'
    .form-group.col-md-6
      = f.select :administrative_unit, service_administrative_unit_options.map { |e| e}, { prompt: t('form.labels.administrative_unit') }, class: 'form-control'
    .form-group.col-md-6
      = f.select :cis, service_cis_options.collect {|p| [Services.service_cis_options[p[:id]-1][:label], p[:id]] }, { prompt: t('form.labels.cis') }, class: 'form-control'

    .form-group.col-md-12
      = button_tag class: "submit btn btn-default" do
        %i.glyphicon.glyphicon-search
        = t('search')

  %table.table.table-hover
    %tr
      %th= t('admin.service.show.columns.name')
      %th= t('admin.service.show.columns.extras')
      %th
    - @services.each do |service|
      %tr
        %td= link_to service.name, edit_admins_service_path(service)
        %td= service.service_fields_names
        %td
          .btn-group
            = link_to edit_admins_service_path(service), class: 'btn btn-default' do
              %span.glyphicon.glyphicon-wrench
            = link_to admins_service_path(service), method: :delete, data: { confirm: t('alerts.destroy_confirmation') }, id: 'destroy-btn', class: 'btn btn-danger', disabled: service.cant_be_deleted? do
              %span.glyphicon.glyphicon-trash

  %h2= t('.statuses')
  %table.table.table-hover
    %tr
      %th= t('.name')
      %th
    - @statuses.each do |status|
      %tr
        %td= status.name
        %td
          = link_to edit_admins_status_path(status), class: 'btn btn-default' do
            %span.glyphicon.glyphicon-wrench

  %h2= t('.geographical_area')
  %blockquote
    = t('.geographical_area_description')

  #bounding-box-map.l-margin-s-bottom{"data-map-constraints" => current_map_constrainsts}
  = button_tag t('.save_restriction'), class: 'btn btn-primary js-save-map js-ajax-button', data: {url:map_constraints_admins_application_settings_path(format: :json)}
  = saving_spinner
