<h2><%= t(".change_password") %></h2>

<%= form_for([:admins, @admin], url: admins_registration_path, html: { method: :put, role: 'form'}) do |f| %>
  <div class="form-group">
    <%= f.label :password, t(".new_password") %><br />
    <%= f.password_field :password, autofocus: true, autocomplete: "off" %>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation, t(".confirm_new_password") %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
    <%= f.hidden_field :active, value: true %>
  </div>
  <div class="actions">
    <%= f.submit t(".change_password"), class: 'btn btn-primary' %>
  </div>
<% end %>