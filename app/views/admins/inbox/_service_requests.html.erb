<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= t("admins.inbox.index.status") %></th>
        <th><%= t("admins.inbox.index.service_request") %></th>
        <th><%= t("admins.inbox.index.created_at") %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @service_requests.each do |service_request| %>
        <tr>
          <td><%= service_request.status %></td>
          <td>
            <%= link_to service_request.service.name,
                        edit_admins_service_request_path(service_request) %>
          </td>
          <td>
            <%= l service_request.created_at, format: :compact %>
          </td>
          <td>
            <%= link_to t('crud.delete'),
                        admins_service_request_path(service_request),
                        method: :delete %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
