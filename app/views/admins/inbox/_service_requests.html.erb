<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th><%= t("admins.inbox.index.status") %></th>
        <th><%= t("admins.inbox.index.service_request") %></th>
        <th><%= t("admins.inbox.index.created_at") %></th>
        <!-- <th></th> -->
      </tr>
    </thead>
    <tbody>
      <% @service_requests.each do |service_request| %>
        <tr class="service-request <%= 'unread' if service_request.unread?(current_admin) %>">
          <td><%= service_request.status %></td>
          <td>
            <%= link_to edit_admins_service_request_path(service_request) do %>
              <%= truncate service_request.description, length: 100, omission: 'â€¦', separator: ' ' %>
            <% end %>
          </td>
          <td>
            <%= l service_request.created_at, format: :compact %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
